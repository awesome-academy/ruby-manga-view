<% provide :title, t(".title") %>

<div class="animsition">
  <div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
				<%= form_for(:session, url: login_path,
					html: {class: "login100-form validate-form flex-sb flex-w"}) do |f| %>
					<span class="login100-form-title p-b-32">
						<%= t ".acc_login" %>
					</span>

					<%= f.label :email, t(".email"), class: "txt1 p-b-11" %>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Email is required">
						<%= f.email_field :email, class: "input100", input_html: { name: "username" } %>
						<span class="focus-input100"></span>
					</div>

					<%= f.label :password, t(".password"), class: "txt1 p-b-11" %>
					<div class="wrap-input100 validate-input m-b-12" data-validate = "Password is required">
						<span class="btn-show-pass">
							<i class="fa fa-eye"></i>
						</span>
						<%= f.password_field :password, class: "input100", input_html: { name: "pass" } %>
						<span class="focus-input100"></span>
					</div>

					<div class="flex-sb-m w-full p-b-48">
						<div class="contact100-form-checkbox">
							<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
							<label class="label-checkbox100" for="ckb1">
								<%= t ".remember_me" %>
							</label>
						</div>
						<div>
							<%= link_to t(".forgot_password"), "#", class: "txt3" %>
						</div>
					</div>

					<div class="flex-sb-m w-full p-b-48">
						<div class="contact100-form-checkbox">
							<%= f.submit t(".button_text"), class: "login100-form-btn" %>
						</div>
						<span> or </span>
						<div>
							<%= link_to t(".sign_up"), "#", class: "txt3" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
  <div class="clap"></div>
</div>

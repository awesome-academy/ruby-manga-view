<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control", id: "form_user" %>

  <%= f.label :email %>
  <%= f.text_field :email, class: "form-control", id: "form_user" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control", id: "form_user" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control", id: "form_user" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary", id: "btn_primary" %>
<% end %>

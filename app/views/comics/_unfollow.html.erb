             html: { method: :delete }, remote: true  do |f| %>
  <div><%= hidden_field_tag :follow, Settings.follow %></div>
  <li class="li02">
    <span class="btn-follow-parent">
      <i class="fa fa-heart"></i>&nbsp;
      <%= f.submit t(".unfollow"), class: "btn-follow" %>

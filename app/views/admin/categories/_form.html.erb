<%= form_for [:admin, @category] do |f| %>
  <div class="card card-default">
    <div class="card-header">
      <h3 class="card-title"><%= t "admin.categories.title" %></h3>
      <%= render "shared/error_messages", object: f.object %>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label t "admin.categories.category_name" %>
            <%= f.text_field :name, class: "form-control", id: "form_user" %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <%= link_to t("admin.categories.cancel"), admin_categories_path, class: "btn btn-info float-right"  %>
    </div>
  </div>
<% end %>

<% provide :title, t(".title") %>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header border-0">
        <h3 class="card-title"><%= t ".manga" %></h3>
        <div class="card-tools">
          <%= link_to "#", class: "btn btn-tool btn-sm"  do %>
            <i class="fa fa-download"></i>
          <% end %>
          <%= link_to "#", class: "btn btn-tool btn-sm"  do %>
            <i class="fa fa-bars"></i>
          <% end %>
        </div>
      </div>
      <div class="card-body p-0">
        <table class="table table-striped table-valign-middle">
          <thead>
          <tr>
            <th><%= t ".manga" %></th>
            <th><%= t ".chapter" %></th>
            <th><%= t ".views" %></th>
            <th><%= t ".options" %></th>
          </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= image_tag "/images/admin/default-150x150.png", class: "img-circle img-size-32 mr-2" %>
                Some Chapter
              </td>
              <td>19293</td>
              <td>
                <small class="text-success mr-1">
                  <i class="fa fa-arrow-up"></i>
                  12%
                </small>
                12,000 Sold
              </td>
              <td>
                <%= link_to "#", class: "text-muted"  do %>
                  <i class="fa fa-search"></i>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= image_tag "/images/admin/default-150x150.png", class: "img-circle img-size-32 mr-2" %>
                Another Chapter
              </td>
              <td>122222</td>
              <td>
                <small class="text-warning mr-1">
                  <i class="fa fa-arrow-down"></i>
                  0.5%
                </small>
                123,234 Sold
              </td>
              <td>
                <%= link_to "#", class: "text-muted"  do %>
                  <i class="fa fa-search"></i>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header border-0">
        <h3 class="card-title"><%= t ".over_views" %></h3>
        <div class="card-tools">
          <%= link_to "#",class: "btn btn-sm btn-tool" do %>
            <i class="fa fa-download"></i>
          <% end %>
          <%= link_to "#",class: "btn btn-sm btn-tool" do %>
            <i class="fa fa-bars"></i>
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
          <p class="text-success text-xl">
            <i class="ion ion-ios-refresh-empty"></i>
          </p>
          <p class="d-flex flex-column text-right">
            <span class="font-weight-bold">
              <i class="ion ion-android-arrow-up text-success"></i> 12%
            </span>
            <span class="text-muted"><%= t ".conversion_rate" %></span>
          </p>
        </div>
        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
          <p class="text-warning text-xl">
            <i class="ion ion-ios-cart-outline"></i>
          </p>
          <p class="d-flex flex-column text-right">
            <span class="font-weight-bold">
              <i class="ion ion-android-arrow-up text-warning"></i> 0.8%
            </span>
            <span class="text-muted"><%= t ".read_rate" %></span>
          </p>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-0">
          <p class="text-danger text-xl">
            <i class="ion ion-ios-people-outline"></i>
          </p>
          <p class="d-flex flex-column text-right">
            <span class="font-weight-bold">
              <i class="ion ion-android-arrow-down text-danger"></i> 1%
            </span>
            <span class="text-muted"><%= t ".follow_rate" %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

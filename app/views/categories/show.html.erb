<body class="animsition">
  <section class="bg-title-page p-t-50 p-b-40 flex-col-c-m category_wall">
    <h2 class="l-text2 t-center">
      <%= t ".category" %>
    </h2>
    <p class="m-text13 t-center">
      <%= t ".new_cate" %>
    </p>
  </section>

  <!-- Content page -->
  <section class="bgwhite p-t-55 p-b-65">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
          <div class="leftbar p-r-20 p-r-0-sm">
            <h4 class="m-text14 p-b-7"><%= t ".category" %></h4>
            <ul class="p-b-54">
              <% @categories.each do |category| %>
                <li class="p-t-4 category-selected">
                  <%= link_to category.name, category_path(category) %>
                </li>
              <% end %>
            </ul>

          </div>
        </div>

        <div class="col-sm-6 col-md-8 col-lg-9 p-b-50">
          <div class="flex-sb-m flex-w p-b-35">
            <div class="search-product pos-relative bo4 of-hidden">
              <input class="s-text7 size6 p-l-23 p-r-50" type="text" name="search-product" placeholder="Search Comic...">
              <button class="flex-c-m size5 ab-r-m color2 color0-hov trans-0-4">
                <i class="fs-12 fa fa-search" aria-hidden="true"></i>
              </button>
            </div>
          </div>

          <div class="row">
            <%= render @comics %>
          </div>

          <div class="pagination flex-m flex-w p-t-26">
            <%= paginate @comics, theme: "twitter-bootstrap-4" %>
          </div>
        </div>
      </div>
      <div id="dropDownSelect1"></div>
    </div>
  </section>
</body>

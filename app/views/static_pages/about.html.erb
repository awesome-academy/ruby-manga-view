<% provide :title, t(".title") %>

<body class="animsition">
  <!-- Title Page -->
  <section class="bg-title-page p-t-40 p-b-50 flex-col-c-m">
    <h2 class="l-text2 t-center"><%= t ".title" %></h2>
  </section>

  <!-- content page -->
  <section class="bgwhite p-t-66 p-b-38">
    <div class="container">
      <div class="row">
        <div class="col-md-4 p-b-30">
          <div class="hov-img-zoom">
            <%= image_tag "/images/common/about-720x866.jpg" %>
          </div>
        </div>

        <div class="col-md-8 p-b-30">
          <h3 class="m-text26 p-t-15 p-b-16"><%= t ".our_story" %></h3>

          <p class="p-b-28"><%= t ".content" %></p>

          <div class="bo13 p-l-29 m-l-9 p-b-10">
            <p class="p-b-11"><%= t ".content_info" %></p>

            <span class="s-text7"><%= t ".author" %></span>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

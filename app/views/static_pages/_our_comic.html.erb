<section class="bgwhite p-t-45 p-b-58">
  <div class="container">
    <div class="sec-title p-b-22">
      <h3 class="m-text5 t-center"><%= t ".title" %></h3>
    </div>

    <div class="tab01">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#best-seller" role="tab">
            <%= t ".popular" %>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#featured" role="tab">
            <%= t ".latest_update" %>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#sale" role="tab">
            <%= t ".recommended" %>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#top-rate" role="tab">
            <%= t ".finished" %>
          </a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content p-t-35">
        <!-- Tab 1 -->
        <div class="tab-pane fade show active" id="best-seller" role="tabpanel">
          <div class="row">
            <%= render "shared/comic_item", object: @tab_one %>
          </div>
        </div>
        <!-- Tab 2 -->
        <div class="tab-pane fade" id="featured" role="tabpanel">
          <div class="row">
            <%= render "shared/comic_item", object: @tab_two %>
          </div>
        </div>
        <!-- Tab 3 -->
        <div class="tab-pane fade" id="sale" role="tabpanel">
          <div class="row">
            <%= render "shared/comic_item", object: @tab_three %>
          </div>
        </div>
        <!-- Tab 4  -->
        <div class="tab-pane fade" id="top-rate" role="tabpanel">
          <div class="row">
            <%= render "shared/comic_item", object: @tab_four %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
